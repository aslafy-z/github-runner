{
    "variables": {
        "runner_user": "runner",
        "runner_group": "runner",
        "runner_home": "/home/runner",
        "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
    },
    "builders": [
        {
            "name": "bionic",
            "region": "us-west-1",
            "type": "amazon-ebs",
            "access_key": "{{user `access_key`}}",
            "secret_key": "{{user `secret_key`}}",
            "ssh_keypair_name": "td-aws-dev",
            "ssh_agent_auth": true,
            "ssh_username": "root",
            "subnet_id": "subnet-c3b87cab",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "root-bionic",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "076613928512"
                ],
                "most_recent": true
            },
            "instance_type": "t3a.large",
            "ami_name": "github-runner-base-bionic",
            "force_deregister": true,
            "force_delete_snapshot": true,
            "ami_regions": [
                "us-west-1",
                "us-west-2"
            ],
            "tags": {
                "Name": "github-runner-base-bionic-{{isotime \"20060102150405\"}}",
                "os": "ubuntu",
                "source": "github-runner",
                "service": "ci",
                "env": "dev"
            },
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 1000,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        },
        {
            "name": "xenial",
            "region": "us-west-1",
            "type": "amazon-ebs",
            "access_key": "{{user `access_key`}}",
            "secret_key": "{{user `secret_key`}}",
            "ssh_keypair_name": "td-aws-dev",
            "ssh_agent_auth": true,
            "ssh_username": "root",
            "subnet_id": "subnet-c3b87cab",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "root-xenial",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "076613928512"
                ],
                "most_recent": true
            },
            "instance_type": "t3a.large",
            "ami_name": "github-runner-base-xenial",
            "force_deregister": true,
            "force_delete_snapshot": true,
            "ami_regions": [
                "us-west-1",
                "us-west-2"
            ],
            "tags": {
                "Name": "github-runner-base-xenial-{{isotime \"20060102150405\"}}",
                "os": "ubuntu",
                "source": "github-runner",
                "service": "ci",
                "env": "dev"
            },
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 1000,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "pause_before": "10s",
            "inline": [
                "apt-get update",
                "usermod --login $RUNNER_USER --move-home --home $RUNNER_HOME ubuntu",
                "groupmob --new-name $RUNNER_GROUP ubuntu",
                "sed -i 's/sudo\\sALL=(ALL:ALL)\\sALL/sudo ALL=(ALL) NOPASSWD:ALL/g' /etc/sudoers",
                "echo 'session required pam_env.so readenv=1' >> /etc/pam.d/sudo"
            ],
            "environment_vars": [
                "DEBIAN_FRONTEND=noninteractive",
                "RUNNER_USER={{user `runner_user`}}",
                "RUNNER_GROUP={{user `runner_group`}}",
                "RUNNER_HOME={{user `runner_home`}}"
            ],
            "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'"
        }
    ]
}
