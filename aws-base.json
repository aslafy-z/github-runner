{
    "variables": {
        "runner_user": "runner",
        "runner_group": "runner",
        "runner_uid": "1000",
        "runner_gid": "1000",
        "runner_home": "/home/runner",
        "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
    },
    "builders": [
        {
            "name": "bionic",
            "region": "us-west-1",
            "type": "amazon-ebs",
            "access_key": "{{user `access_key`}}",
            "secret_key": "{{user `secret_key`}}",
            "ssh_keypair_name": "td-aws-dev",
            "ssh_agent_auth": true,
            "ssh_username": "ubuntu",
            "subnet_id": "subnet-c3b87cab",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "679593333241"
                ],
                "most_recent": true
            },
            "instance_type": "t3a.large",
            "ami_name": "github-runner-base-bionic-{{timestamp|clean_resource_name}}-{{user `vcs_ref`}}",
            "ami_regions": [
                "us-west-1",
                "us-west-2"
            ],
            "tags": {
                "Name": "github-runner-base-bionic-{{timestamp|clean_resource_name}}-{{user `vcs_ref`}}",
                "os": "ubuntu",
                "source": "github-runner",
                "service": "ci",
                "env": "dev"
            },
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 1000,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        },
        {
            "name": "xenial",
            "region": "us-west-1",
            "type": "amazon-ebs",
            "access_key": "{{user `access_key`}}",
            "secret_key": "{{user `secret_key`}}",
            "ssh_keypair_name": "td-aws-dev",
            "ssh_agent_auth": true,
            "ssh_username": "ubuntu",
            "subnet_id": "subnet-c3b87cab",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "099720109477"
                ],
                "most_recent": true
            },
            "instance_type": "t3a.large",
            "ami_name": "github-runner-base-xenial-{{timestamp|clean_resource_name}}-{{user `vcs_ref`}}",
            "ami_regions": [
                "us-west-1",
                "us-west-2"
            ],
            "tags": {
                "Name": "github-runner-base-xenial-{{timestamp|clean_resource_name}}-{{user `vcs_ref`}}",
                "os": "ubuntu",
                "source": "github-runner",
                "service": "ci",
                "env": "dev"
            },
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 1000,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "pause_before": "10s",
            "inline": [
                "apt-get update",
                "apt-get install -y --no-install-recommends sudo",
                "usermod --login runner --move-home --home /home/runner ubuntu",
                "groupmob --new-name runner ubuntu",
                "sed -i 's/sudo\\sALL=(ALL:ALL)\\sALL/sudo ALL=(ALL) NOPASSWD:ALL/g' /etc/sudoers",
                "echo 'session required pam_env.so readenv=1' >> /etc/pam.d/sudo"
            ],
            "environment_vars": [
                "DEBIAN_FRONTEND=noninteractive"
            ],
            "execute_command": "sh -c '{{ .Vars }} {{ .Path }}'"
        }
    ]
}
