[Unit]
Description=GitHub Actions Runner Config

[Service]
Type=oneshot
User=runner
RootDirectory=/home/runner
ExecStart=/home/runner/actions-runner/config.sh --url "$RUNNER_REPOSITORY_URL" --token "$RUNNER_TOKEN" --name "$RUNNER_NAME" --work "$RUNNER_WORK_DIRECTORY" "$CONFIG_OPTS" --unattended
StandardOutput=inherit
StandardError=inherit
EnvironmentFile=/etc/environment
EnvironmentFile=/etc/github-runner-env

[Install]
WantedBy=multi-user.target
